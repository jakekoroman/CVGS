@model User
@{

    ViewData["Title"] = "Preferences";
}


<h1>Preferences</h1>
<hr />

@if (ViewBag.SuccessMessage != null)
{
    <h4>@ViewBag.SuccessMessage</h4>
}

@if (ViewBag.ErrorMessage != null)
{
    <h4>@ViewBag.ErrorMessage</h4>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Preferences">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label>Favorite Game Platforms</label>
                <select asp-for="FavoritePlatform" class ="form-control" asp-items="ViewBag.Platforms"></select>
                <span asp-validation-for="FavoritePlatform" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Favorite Game Categories</label>
                <select asp-for="FavoriteGameCategory" class="form-control" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="FavoriteGameCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
