
@model User  
<div class="login">
    @using (Html.BeginForm("LoginForm", "Login", FormMethod.Post)) {
<table>
    <tr>
        <td>Email: </td>
        <td>@Html.TextBoxFor(m => m.Email)</td>
    </tr>
    <tr>
        <td>Password: </td>
        <td>@Html.TextBoxFor(m => m.Password)</td>
    </tr>
    <tr>
        <td colspan="2"><input type="submit" value="Login" /></td>
    </tr>
</table>
    }

</div>